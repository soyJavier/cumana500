<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fontify="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="230dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/bg_menu"
        android:id="@+id/image"
        />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/image"
         >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            >

                <com.cumana.fonts.TextView
                    style="@style/labelSubtitle"
                    android:textColor="#000000"
                    android:gravity="center_horizontal"
                    android:id="@+id/title"
                    android:layout_gravity="center"
                    android:text="Gobernacion del estado sucre"
                    fontify:font="@string/RobotoRegular"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:background="#e9e7e7"
                    android:weightSum="10"
                    android:layout_gravity="center_horizontal"
                    >

                    <com.cumana.fonts.TextView
                        style="@style/labelSubtitle"
                        android:layout_width="0dp"
                        android:layout_weight="5"
                        android:textColor="#000000"
                        android:id="@+id/phone"
                        android:text="(0293)3416875"
                        android:gravity="right"
                        android:layout_margin="5dp"
                        />

                    <com.cumana.fonts.TextView
                        android:layout_margin="5dp"
                        style="@style/labelSubtitle"
                        android:layout_width="0dp"
                        android:layout_weight="5"
                        android:textColor="#000000"
                        android:id="@+id/email"
                        android:text="luisjhp93@gmail.com"
                        android:gravity="left"
                        />

                </LinearLayout>


                <com.cumana.fonts.TextView
                    android:layout_marginTop="20dp"
                    style="@style/labelSubtitle"
                    android:textColor="#000000"
                    android:id="@+id/description"
                    android:layout_gravity="left"
                    android:gravity="left"
                    android:text="Gobernacion del estado sucre"
                    fontify:font="@string/RobotoRegular"
                    android:textSize="12dp"
                    />

                <com.cumana.fonts.TextView
                    style="@style/labelSubtitle"
                    android:textColor="#000000"
                    android:layout_gravity="left"
                    android:text="Direccion"
                    fontify:font="@string/RobotoRegular"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    />

                <com.cumana.fonts.TextView
                    android:layout_width="fill_parent"
                    android:layout_height="2dp"
                    android:background="@drawable/borders_black"
                    android:layout_marginTop="5dp"
                    />

                <com.cumana.fonts.TextView
                    style="@style/labelSubtitle"
                    android:textColor="#000000"
                    android:layout_gravity="left"
                    fontify:font="@string/RobotoRegular"
                    android:id="@+id/address"
                    android:textSize="12dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    />


                <fragment
                    android:id="@+id/maps"
                    android:name="com.google.android.gms.maps.MapFragment"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    />
        </LinearLayout>

    </ScrollView>


    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:elevation="0dp"
        android:id="@+id/xx"
        >

        <include
            layout="@layout/toolbar_menu"
            app:elevation="0dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </android.support.design.widget.AppBarLayout>

</RelativeLayout>