<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:fontify="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardElevation="4dp"
    card_view:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="180dp"
            android:scaleType="centerCrop"
            android:id="@+id/image"
            android:src="@mipmap/test"
            />


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                >

                <com.cumana.fonts.TextView
                    android:id="@+id/name"
                    style="@style/labelList"
                    android:text="Gobernación del Estado Sucre"
                    android:layout_marginRight="30dp"
                    android:textColor="#000000"
                    android:textSize="16dp"
                    fontify:font="@string/RobotoRegular"
                    />

                <com.cumana.fonts.TextView
                    android:layout_marginTop="5dp"
                    android:id="@+id/subName"
                    style="@style/labelList"
                    android:text="Gobernador: Lic. Luis Acuña"
                    android:textSize="14dp"
                    android:layout_below="@id/name"
                    fontify:font="@string/RobotoRegular"
                    />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_share"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    />

                <com.cumana.fonts.TextView
                    android:layout_marginTop="10dp"
                    android:id="@+id/description"
                    style="@style/labelList"
                    android:textSize="14dp"
                    android:layout_below="@id/subName"
                    fontify:font="@string/RobotoLight"
                    />

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>